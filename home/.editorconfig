# editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[{[mM]akefile*,*.am}]
indent_size = 4
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.txt]
indent_style = tab
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

