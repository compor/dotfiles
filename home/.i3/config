  xkblayout-state print "%s" > /tmp/lang && $refresh_i3status
#exec --no-startup-id "setxkbmap -model pc105 -layout us,gr,de -option 'grp:shift_toggle'"
#exec --no-startup-id setxkbmap -option 'ctrl:swapcaps'
exec xkblayout-state print "%s" > /tmp/lang

set $primary_monitor "eDP1"
set $secondary_monitor "HDMI1"

exec /usr/bin/xrandr --output $primary_monitor --primary
exec /usr/bin/xrandr --auto --output $secondary_monitor --mode 1920x1200 --above $primary_monitor

# move between screens
bindsym $mod+shift+m move workspace to output $secondary_monitor
bindsym $mod+m move workspace to output $primary_monitor

