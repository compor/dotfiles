{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "args": ["--log-file=/tmp/ccls.log", "-v=1"],
      "filetypes": [
        "c",
        "cc",
        "cxx",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight": { "lsRanges" : true }
      },
      "client": {
        "snippetSupport": true
      }
    }
  },
  "cmake.lsp.enable": true,
  "yaml.format.enable": true
}
